API_BASE_URL=http://localhost:8001/v1

# App Branding
APP_NAME=MyApp

# Public API Base URL (shown to users on Keys page)
# Example: https://api.0-0.pro/v1
PUBLIC_API_BASE_URL=

# Postgres (docker compose)
POSTGRES_USER=uniapi
POSTGRES_PASSWORD=
POSTGRES_DB=uniapi

# Google OAuth (Authorization Code + PKCE)
# 1) Create OAuth Client in Google Cloud Console (Web application)
# 2) Authorized redirect URI must include:
#    http://localhost:3000/api/auth/google/callback
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Resend Email (verification codes)
RESEND_API_KEY=
RESEND_FROM_EMAIL=Uni API <onboarding@resend.dev>
EMAIL_VERIFICATION_REQUIRED=true
EMAIL_VERIFICATION_TTL_MINUTES=10

# Billing (Creem)
CREEM_API_KEY=
CREEM_PRODUCT_ID=
CREEM_WEBHOOK_SECRET=
APP_PUBLIC_URL=http://localhost:3000

# Admin bootstrap (optional)
# - First registered user becomes owner automatically (empty DB).
# - For later users, set a strong token here and call `POST /v1/auth/admin/claim`.
ADMIN_BOOTSTRAP_TOKEN=
